<%- include('../partials/header', { user: typeof user !=='undefined' ? user : undefined }) %>

  <div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
      <div class="col-md-12">
        <div class="card shadow-sm border-0 bg-success text-white">
          <div class="card-body">
            <h2 class="card-title mb-2">
              <i class="fas fa-user-tie me-2"></i>Manager Dashboard
            </h2>
            <p class="card-text mb-0">Welcome, <%= user.username %>. Manage orders, assign designers, and track
                inventory.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Key Metrics Row -->
    <div class="row mb-4">
      <div class="col-md-3 mb-3">
        <div class="card shadow-sm border-0 border-start border-warning border-4">
          <div class="card-body">
            <h6 class="text-muted mb-2">Pending Orders</h6>
            <h3 class="mb-0">
              <%= stats.pendingCount || 0 %>
            </h3>
            <small class="text-muted">Awaiting assignment</small>
          </div>
        </div>
      </div>

      <div class="col-md-3 mb-3">
        <div class="card shadow-sm border-0 border-start border-info border-4">
          <div class="card-body">
            <h6 class="text-muted mb-2">In Production</h6>
            <h3 class="mb-0">
              <%= stats.inProductionCount || 0 %>
            </h3>
            <small class="text-muted">Being manufactured</small>
          </div>
        </div>
      </div>

      <div class="col-md-3 mb-3">
        <div class="card shadow-sm border-0 border-start border-primary border-4">
          <div class="card-body">
            <h6 class="text-muted mb-2">Shipped</h6>
            <h3 class="mb-0">
              <%= stats.shippedCount || 0 %>
            </h3>
            <small class="text-muted">Out for delivery</small>
          </div>
        </div>
      </div>

      <div class="col-md-3 mb-3">
        <div class="card shadow-sm border-0 border-start border-success border-4">
          <div class="card-body">
            <h6 class="text-muted mb-2">Delivered Orders</h6>
            <h3 class="mb-0 text-success">
              <%= orders.filter(o=> o.status === 'delivered').length %>
            </h3>
            <small class="text-muted">Successfully completed</small>
          </div>
        </div>
      </div>
    </div>

    <!-- Secondary Metrics Row -->
    <div class="row mb-4">
      <div class="col-md-3 mb-3">
        <div class="card shadow-sm border-0 border-start border-danger border-4">
          <div class="card-body">
            <h6 class="text-muted mb-2">Low Stock Products</h6>
            <h3 class="mb-0">
              <%= stats.lowStockCount || 0 %>
            </h3>
            <small class="text-muted">Need restocking</small>
          </div>
        </div>
      </div>

      <div class="col-md-3 mb-3">
        <div class="card shadow-sm border-0 border-start border-dark border-4">
          <div class="card-body">
            <h6 class="text-muted mb-2">Total Orders</h6>
            <h3 class="mb-0">
              <%= stats.totalOrders || 0 %>
            </h3>
            <small class="text-muted">All time</small>
          </div>
        </div>
      </div>

      <div class="col-md-6 mb-3">
        <div class="card shadow-sm border-0 border-start border-success border-4 bg-light">
          <div class="card-body">
            <h6 class="text-muted mb-2">Total Revenue (Delivered)</h6>
            <h3 class="mb-0 text-success">
              ₹<%= orders.filter(o=> o.status === 'delivered').reduce((sum, order) => sum + (order.totalPrice || 0),
                0).toFixed(2) %>
            </h3>
            <small class="text-muted">From <%= orders.filter(o=> o.status === 'delivered').length %> delivered
                orders</small>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content Row -->
    <div class="row mb-4">
      <!-- Pending Orders - Assignment -->
      <div class="col-md-8 mb-3">
        <div class="card shadow-sm border-0">
          <div class="card-header bg-white">
            <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Pending Orders - Assign to Designer</h5>
            <small class="text-muted">Showing recent orders from the last 30 days</small>
          </div>
          <div class="card-body">
            <% if (pendingOrders && pendingOrders.length> 0) { %>
              <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                <strong>
                  <%= pendingOrders.length %> pending order(s)
                </strong> need assignment.
                Only custom design orders require designer assignment.
              </div>
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Order ID</th>
                      <th>Customer</th>
                      <th>Type</th>
                      <th>Items</th>
                      <th>Total</th>
                      <th>Date</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% pendingOrders.forEach(order=> {
                      // Check if this is a custom design order (has items without productId)
                      const isCustomOrder = order.items && order.items.some(item =>
                      item.customizationId && !item.customizationId.productId
                      );

                      // Calculate actual total from items
                      let calculatedTotal = 0;
                      if (order.items) {
                      order.items.forEach(item => {
                      calculatedTotal += (item.price || 0) * (item.quantity || 1);
                      });
                      }
                      const displayTotal = calculatedTotal > 0 ? calculatedTotal : order.totalPrice;
                      %>
                      <tr id="order-row-<%= order._id %>">
                        <td><small>
                            <%= order._id.toString().substring(0, 8) %>...
                          </small></td>
                        <td>
                          <%= order.customerId ? order.customerId.username : 'N/A' %>
                        </td>
                        <td>
                          <% if (isCustomOrder) { %>
                            <span class="badge bg-primary">
                              <i class="fas fa-palette"></i> Custom Design
                            </span>
                            <% } else { %>
                              <span class="badge bg-success">
                                <i class="fas fa-shopping-bag"></i> Shop Order
                              </span>
                              <% } %>
                        </td>
                        <td>
                          <%= order.items ? order.items.length : 0 %>
                        </td>
                        <td><strong>₹<%= displayTotal.toFixed(2) %></strong></td>
                        <td><small>
                            <%= new Date(order.orderDate).toLocaleDateString() %>
                          </small></td>
                        <td>
                          <% if (isCustomOrder) { %>
                            <!-- Custom 3D Design orders need designer assignment -->
                            <div class="d-flex gap-1">
                              <button class="btn btn-sm btn-success assign-btn" data-order-id="<%= order._id %>"
                                data-bs-toggle="modal" data-bs-target="#assignModal-<%= order._id %>"
                                title="Review and assign this custom design to designer">
                                <i class="fas fa-check-circle"></i> Approve & Assign
                              </button>
                              <button class="btn btn-sm btn-danger reject-btn" data-order-id="<%= order._id %>"
                                title="Reject this custom design order">
                                <i class="fas fa-times"></i>
                              </button>
                            </div>
                            <% } else { %>
                              <!-- Shop orders are approved -->
                              <span class="badge bg-success">
                                <i class="fas fa-check-circle"></i> Approved
                              </span>
                              <% } %>
                        </td>
                      </tr>

                      <!-- Assignment Modal (only for custom orders) -->
                      <% if (isCustomOrder) { %>
                        <div class="modal fade" id="assignModal-<%= order._id %>" tabindex="-1">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header bg-success text-white">
                                <h5 class="modal-title">
                                  <i class="fas fa-check-circle me-2"></i>Approve & Assign Custom 3D Design
                                </h5>
                                <button type="button" class="btn-close btn-close-white"
                                  data-bs-dismiss="modal"></button>
                              </div>
                              <div class="modal-body">
                                <div class="alert alert-success">
                                  <i class="fas fa-cube me-2"></i>
                                  This is a <strong>custom 3D design from Design Studio</strong> that requires
                                  fabrication by the designer.
                                </div>
                                <p><strong>Order ID:</strong>
                                  <%= order._id %>
                                </p>
                                <p><strong>Customer:</strong>
                                  <%= order.customerId ? order.customerId.username : 'N/A' %>
                                </p>
                                <div class="mb-3">
                                  <label class="form-label">Select Designer</label>
                                  <select class="form-select designer-select" data-order-id="<%= order._id %>">
                                    <option value="">Choose a designer...</option>
                                    <% designers.forEach(designer=> { %>
                                      <option value="<%= designer._id %>">
                                        <%= designer.username %> (<%= designer.email %>)
                                      </option>
                                      <% }) %>
                                  </select>
                                </div>
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="button" class="btn btn-primary confirm-assign-btn"
                                  data-order-id="<%= order._id %>">
                                  <i class="fas fa-user-check me-2"></i>Assign Designer
                                </button>
                              </div>
                            </div>
                          </div>
                        </div>
                        <% } %>
                          <% }) %>
                  </tbody>
                </table>
              </div>
              <% } else { %>
                <div class="alert alert-success text-center">
                  <i class="fas fa-check-circle me-2"></i>
                  <strong>All caught up!</strong> No pending orders from the last 30 days.
                </div>
                <% } %>
          </div>
        </div>
      </div>

      <!-- Designer Performance -->
      <div class="col-md-4 mb-3">
        <div class="card shadow-sm border-0">
          <div class="card-header bg-white">
            <h5 class="mb-0"><i class="fas fa-paint-brush me-2"></i>Designer Performance</h5>
          </div>
          <div class="card-body">
            <% if (designerStats && designerStats.length> 0) { %>
              <% designerStats.forEach(stat=> { %>
                <div class="mb-3 pb-3 border-bottom">
                  <h6 class="mb-2">
                    <%= stat.designer.username %>
                  </h6>
                  <div class="d-flex justify-content-between mb-1">
                    <small class="text-muted">Total Assigned:</small>
                    <strong>
                      <%= stat.totalAssigned %>
                    </strong>
                  </div>
                  <div class="d-flex justify-content-between mb-1">
                    <small class="text-muted">In Progress:</small>
                    <span class="badge bg-info">
                      <%= stat.inProgress %>
                    </span>
                  </div>
                  <div class="d-flex justify-content-between">
                    <small class="text-muted">Completed:</small>
                    <span class="badge bg-success">
                      <%= stat.completed %>
                    </span>
                  </div>
                </div>
                <% }) %>
                  <% } else { %>
                    <p class="text-muted mb-0">No designer data</p>
                    <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- Inventory Management -->
    <div class="row mb-4">
      <div class="col-md-12">
        <div class="card shadow-sm border-0">
          <div class="card-header bg-white">
            <h5 class="mb-0"><i class="fas fa-warehouse me-2"></i>Inventory Management</h5>
          </div>
          <div class="card-body">
            <% if (products && products.length> 0) { %>
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Product Name</th>
                      <th>Category</th>
                      <th>Price</th>
                      <th>Stock Status</th>
                      <th>Stock Quantity</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% products.forEach(product=> { %>
                      <tr id="product-row-<%= product._id %>">
                        <td><strong>
                            <%= product.name %>
                          </strong></td>
                        <td>
                          <%= product.category || 'N/A' %>
                        </td>
                        <td>₹<%= (product.price || 0).toFixed(2) %>
                        </td>
                        <td class="stock-status-<%= product._id %>">
                          <% if (product.inStock) { %>
                            <span class="badge bg-success">In Stock</span>
                            <% } else { %>
                              <span class="badge bg-danger">Out of Stock</span>
                              <% } %>
                        </td>
                        <td class="stock-quantity-<%= product._id %>">
                          <%= product.stockQuantity || 0 %>
                        </td>
                        <td>
                          <button class="btn btn-sm btn-outline-primary toggle-stock-btn"
                            data-product-id="<%= product._id %>" data-current-stock="<%= product.inStock %>">
                            <i class="fas fa-exchange-alt"></i> Toggle Stock
                          </button>
                          <button class="btn btn-sm btn-outline-success update-quantity-btn"
                            data-product-id="<%= product._id %>" data-bs-toggle="modal"
                            data-bs-target="#quantityModal-<%= product._id %>">
                            <i class="fas fa-edit"></i> Update Qty
                          </button>
                        </td>
                      </tr>

                      <!-- Quantity Update Modal -->
                      <div class="modal fade" id="quantityModal-<%= product._id %>" tabindex="-1">
                        <div class="modal-dialog modal-sm">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title">Update Quantity</h5>
                              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                              <p><strong>
                                  <%= product.name %>
                                </strong></p>
                              <div class="mb-3">
                                <label class="form-label">New Quantity</label>
                                <input type="number" class="form-control quantity-input"
                                  data-product-id="<%= product._id %>" value="<%= product.stockQuantity || 0 %>"
                                  min="0">
                              </div>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                              <button type="button" class="btn btn-primary confirm-quantity-btn"
                                data-product-id="<%= product._id %>">
                                Update
                              </button>
                            </div>
                          </div>
                        </div>
                      </div>
                      <% }) %>
                  </tbody>
                </table>
              </div>

              <% if (lowStockProducts && lowStockProducts.length> 0) { %>
                <div class="alert alert-warning mt-3">
                  <i class="fas fa-exclamation-triangle me-2"></i>
                  <strong>Warning:</strong>
                  <%= lowStockProducts.length %> product(s) are low on stock or out of stock.
                </div>
                <% } %>

                  <% } else { %>
                    <p class="text-muted text-center py-4">No products found</p>
                    <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- In Production Orders -->
    <div class="row mb-4">
      <div class="col-md-12">
        <div class="card shadow-sm border-0">
          <div class="card-header bg-white">
            <h5 class="mb-0"><i class="fas fa-cogs me-2"></i>Orders In Production</h5>
          </div>
          <div class="card-body">
            <% if (inProductionOrders && inProductionOrders.length> 0) { %>
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Order ID</th>
                      <th>Customer</th>
                      <th>Designer</th>
                      <th>Items</th>
                      <th>Total</th>
                      <th>Start Date</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% inProductionOrders.slice(0, 10).forEach(order=> { %>
                      <tr>
                        <td><small>
                            <%= order._id.toString().substring(0, 8) %>...
                          </small></td>
                        <td>
                          <%= order.customerId ? order.customerId.username : 'N/A' %>
                        </td>
                        <td>
                          <% if (order.designerId) { %>
                            <span class="badge bg-info">
                              <%= order.designerId.username %>
                            </span>
                            <% } else { %>
                              <span class="text-muted">Unassigned</span>
                              <% } %>
                        </td>
                        <td>
                          <%= order.items ? order.items.length : 0 %>
                        </td>
                        <td><strong>₹<%= (order.totalPrice || 0).toFixed(2) %></strong></td>
                        <td><small>
                            <%= new Date(order.orderDate).toLocaleDateString() %>
                          </small></td>
                      </tr>
                      <% }) %>
                  </tbody>
                </table>
              </div>
              <% } else { %>
                <p class="text-muted text-center py-4">No orders in production</p>
                <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- Designer Submissions - Ready for Review -->
    <% if (readyForReviewOrders && readyForReviewOrders.length> 0) { %>
      <div class="row mb-4">
        <div class="col-md-12">
          <div class="card shadow-sm border-0 border-start border-success border-4">
            <div class="card-header bg-success text-white">
              <h5 class="mb-0">
                <i class="fas fa-paper-plane me-2"></i>Designer Submissions - Ready for Your Review
                <span class="badge bg-white text-success ms-2">
                  <%= readyForReviewOrders.length %>
                </span>
              </h5>
            </div>
            <div class="card-body">
              <div class="alert alert-success mb-3">
                <i class="fas fa-check-circle me-2"></i>
                <strong>Action Required:</strong> These orders have been completed by designers and are awaiting your
                quality review and packing approval.
              </div>

              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Order ID</th>
                      <th>Customer</th>
                      <th>Designer</th>
                      <th>Submitted</th>
                      <th>Total</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% readyForReviewOrders.forEach(order=> { %>
                      <tr id="review-order-<%= order._id %>" class="table-success">
                        <td>
                          <a href="/manager/order/<%= order._id %>" class="text-decoration-none">
                            <strong>#<%= order._id.toString().slice(-6) %></strong>
                          </a>
                        </td>
                        <td>
                          <%= order.customerId.username %>
                        </td>
                        <td>
                          <% if (order.designerId) { %>
                            <span class="badge bg-info">
                              <i class="fas fa-user-tie"></i>
                              <%= order.designerId.username %>
                            </span>
                            <% } else { %>
                              <span class="text-muted">N/A</span>
                              <% } %>
                        </td>
                        <td>
                          <small>
                            <%= new Date(order.timeline && order.timeline.length> 0
                              ? order.timeline[order.timeline.length - 1].at
                              : order.orderDate).toLocaleDateString() %>
                          </small>
                        </td>
                        <td><strong>₹<%= (order.totalPrice || 0).toFixed(2) %></strong></td>
                        <td>
                          <button class="btn btn-success btn-sm mark-completed-btn" data-order-id="<%= order._id %>">
                            <i class="fas fa-box-open me-1"></i>Review & Pack
                          </button>
                        </td>
                      </tr>
                      <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% } %>

        <!-- Manual Order Status Management (Amazon-style workflow) -->
        <div class="row mb-4">
          <div class="col-md-12">
            <div class="card shadow-sm border-0">
              <div class="card-header bg-white">
                <h5 class="mb-0">
                  <i class="fas fa-truck me-2"></i>Order Status Management
                </h5>
              </div>
              <div class="card-body">
                <% // Build the list of orders that require manager action // Include: // 1) Shop orders (ready‑made)
                  with status 'in_production' (ready to pack) // 2) Custom orders with status 'ready_for_review'
                  (designer finished) // 3) Orders with status 'completed' (packed) or 'shipped' (out for delivery)
                  const activeOrders=(orders || []).filter(function (order) { // Check if it's a shop order (has
                  productId in customization) const isShopOrder=order && order.items && order.items.some(function (item)
                  { return item && item.customizationId && item.customizationId.productId; }); // Include shop orders
                  in 'in_production' (ready to pack) if (order && order.status==='in_production' && isShopOrder) {
                  return true; } // Include custom orders that are 'ready_for_review' (designer finished) if (order &&
                  order.status==='ready_for_review' ) { return true; } // Include all 'completed' and 'shipped' orders
                  (both shop and custom) if (order && (order.status==='completed' || order.status==='shipped' )) {
                  return true; } return false; }); %>

                  <% if (activeOrders && activeOrders.length> 0) { %>
                    <div class="alert alert-info mb-3">
                      <i class="fas fa-info-circle me-2"></i>
                      <strong>Manager Workflow:</strong>
                      <br><strong>Shop Orders (Ready-Made):</strong>
                      <span class="badge bg-primary">In Production</span> →
                      <span class="badge bg-warning text-dark">Packed</span> →
                      <span class="badge bg-info">Shipped</span> →
                      <span class="badge bg-success">Delivered</span>
                      <br><strong>Custom Orders (3D Design):</strong>
                      <span class="badge bg-success">Ready for Review</span> →
                      <span class="badge bg-warning text-dark">Packed</span> →
                      <span class="badge bg-info">Shipped</span> →
                      <span class="badge bg-success">Delivered</span>
                    </div>
                    <div class="table-responsive">
                      <table class="table table-hover">
                        <thead>
                          <tr>
                            <th>Order ID</th>
                            <th>Customer</th>
                            <th>Type</th>
                            <th>Current Status</th>
                            <th>Total</th>
                            <th>Order Date</th>
                            <th>Actions</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% activeOrders.forEach(order=> {
                            const isCustomOrder = order.items && order.items.some(item =>
                            item.customizationId && !item.customizationId.productId
                            );
                            %>
                            <tr id="order-status-row-<%= order._id %>">
                              <td>
                                <strong>#<%= order._id.toString().slice(-6) %></strong>
                                <br><small class="text-muted">
                                  <%= order._id.toString().substring(0, 8) %>...
                                </small>
                              </td>
                              <td>
                                <i class="fas fa-user me-1"></i>
                                <%= order.customerId ? order.customerId.username : 'N/A' %>
                              </td>
                              <td>
                                <% if (isCustomOrder) { %>
                                  <span class="badge bg-primary">
                                    <i class="fas fa-palette"></i> Custom
                                  </span>
                                  <% } else { %>
                                    <span class="badge bg-success">
                                      <i class="fas fa-shopping-bag"></i> Shop
                                    </span>
                                    <% } %>
                              </td>
                              <td>
                                <% if (order.status==='in_production' ) { %>
                                  <span class="badge bg-primary">
                                    <i class="fas fa-cogs"></i> In Production
                                  </span>
                                  <% } else if (order.status==='ready_for_review' ) { %>
                                    <span class="badge bg-success">
                                      <i class="fas fa-check-circle"></i> Ready for Review
                                    </span>
                                    <% } else if (order.status==='assigned' ) { %>
                                      <span class="badge bg-secondary">
                                        <i class="fas fa-user-check"></i> Assigned
                                      </span>
                                      <% } else if (order.status==='completed' ) { %>
                                        <span class="badge bg-warning text-dark">
                                          <i class="fas fa-box"></i> Packed (Ready)
                                        </span>
                                        <% } else if (order.status==='shipped' ) { %>
                                          <span class="badge bg-info">
                                            <i class="fas fa-shipping-fast"></i> Out for Delivery
                                          </span>
                                          <% } %>
                              </td>
                              <td><strong>₹<%= (order.totalPrice || 0).toFixed(2) %></strong></td>
                              <td>
                                <small>
                                  <%= new Date(order.orderDate).toLocaleDateString() %>
                                </small>
                                <br>
                                <small class="text-muted">
                                  <%= new Date(order.orderDate).toLocaleTimeString() %>
                                </small>
                              </td>
                              <td>
                                <div class="btn-group-vertical btn-group-sm" role="group">
                                  <% if (order.status==='in_production' ) { %>
                                    <!-- Shop order ready-made - Manager can Pack -->
                                    <button class="btn btn-warning btn-sm mark-completed-btn"
                                      data-order-id="<%= order._id %>" title="Pack the ready-made order for shipping">
                                      <i class="fas fa-box"></i> Mark as Packed
                                    </button>
                                    <% } else if (order.status==='ready_for_review' ) { %>
                                      <!-- Designer submitted - Manager can Review & Pack -->
                                      <button class="btn btn-success btn-sm mark-completed-btn"
                                        data-order-id="<%= order._id %>"
                                        title="Review designer's work and pack the order">
                                        <i class="fas fa-box-open"></i> Review & Pack
                                      </button>
                                      <% } else if (order.status==='completed' ) { %>
                                        <!-- Packed - Manager can Ship -->
                                        <button class="btn btn-info btn-sm mark-shipped-btn"
                                          data-order-id="<%= order._id %>" title="Mark as shipped (out for delivery)">
                                          <i class="fas fa-truck"></i> Mark as Shipped
                                        </button>
                                        <% } else if (order.status==='shipped' ) { %>
                                          <!-- Shipped - Manager can Mark Delivered -->
                                          <button class="btn btn-success btn-sm mark-delivered-btn"
                                            data-order-id="<%= order._id %>" title="Mark as delivered and complete">
                                            <i class="fas fa-check-circle"></i> Mark as Delivered
                                          </button>
                                          <% } %>
                                </div>
                              </td>
                            </tr>
                            <% }) %>
                        </tbody>
                      </table>
                    </div>
                    <% } else { %>
                      <p class="text-muted text-center py-4">
                        <i class="fas fa-inbox me-2"></i>
