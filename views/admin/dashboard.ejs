<%- include('../partials/header') %>

  <div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
      <div class="col-md-12">
        <div class="card shadow-sm border-0 bg-primary text-white">
          <div class="card-body">
            <h2 class="card-title mb-2">
              <i class="fas fa-chart-line me-2"></i>Admin Analytics Dashboard
            </h2>
            <p class="card-text mb-0">Welcome, <%= user.username %>. Overview of business performance and metrics.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Key Metrics Row -->
    <div class="row mb-4">
      <!-- Total Revenue -->
      <div class="col-md-3 mb-3">
        <div class="card shadow-sm border-0 h-100">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h6 class="text-muted mb-2">Total Revenue</h6>
                <h3 class="mb-0">₹<%= (stats.totalRevenue || 0).toFixed(2) %>
                </h3>
                <small class="text-success">
                  <i class="fas fa-arrow-up"></i> All time
                </small>
              </div>
              <div class="text-primary" style="font-size: 2.5rem;">
                <i class="fas fa-rupee-sign"></i>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Total Orders -->
      <div class="col-md-3 mb-3">
        <div class="card shadow-sm border-0 h-100">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h6 class="text-muted mb-2">Total Orders</h6>
                <h3 class="mb-0">
                  <%= stats.totalOrders || 0 %>
                </h3>
                <small class="text-info">
                  <i class="fas fa-shopping-bag"></i> All time
                </small>
              </div>
              <div class="text-info" style="font-size: 2.5rem;">
                <i class="fas fa-shopping-cart"></i>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Completed Revenue -->
      <div class="col-md-3 mb-3">
        <div class="card shadow-sm border-0 h-100">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h6 class="text-muted mb-2">Completed Revenue</h6>
                <h3 class="mb-0">₹<%= (stats.completedRevenue || 0).toFixed(2) %>
                </h3>
                <small class="text-success">
                  <i class="fas fa-check-circle"></i>
                  <%= stats.completedOrders || 0 %> orders
                </small>
              </div>
              <div class="text-success" style="font-size: 2.5rem;">
                <i class="fas fa-check-double"></i>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Total Products -->
      <div class="col-md-3 mb-3">
        <div class="card shadow-sm border-0 h-100">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h6 class="text-muted mb-2">Products</h6>
                <h3 class="mb-0">
                  <%= stats.totalProducts || 0 %>
                </h3>
                <small class="text-warning">
                  <i class="fas fa-exclamation-triangle"></i>
                  <%= stats.lowStockProducts || 0 %> low stock
                </small>
              </div>
              <div class="text-warning" style="font-size: 2.5rem;">
                <i class="fas fa-boxes"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Order Status Row -->
    <div class="row mb-4">
      <div class="col-md-3 mb-3">
        <div class="card shadow-sm border-0 border-start border-warning border-4">
          <div class="card-body">
            <h6 class="text-muted mb-2">Pending Orders</h6>
            <h4 class="mb-1">
              <%= stats.pendingOrders || 0 %>
            </h4>
            <small class="text-muted">₹<%= (stats.pendingRevenue || 0).toFixed(2) %> pending revenue</small>
          </div>
        </div>
      </div>

      <div class="col-md-3 mb-3">
        <div class="card shadow-sm border-0 border-start border-info border-4">
          <div class="card-body">
            <h6 class="text-muted mb-2">In Production</h6>
            <h4 class="mb-1">
              <%= stats.inProductionOrders || 0 %>
            </h4>
            <small class="text-muted">Being manufactured</small>
          </div>
        </div>
      </div>

      <div class="col-md-3 mb-3">
        <div class="card shadow-sm border-0 border-start border-primary border-4">
          <div class="card-body">
            <h6 class="text-muted mb-2">Shipped Orders</h6>
            <h4 class="mb-1">
              <%= stats.shippedOrders || 0 %>
            </h4>
            <small class="text-muted">Out for delivery</small>
          </div>
        </div>
      </div>

      <div class="col-md-3 mb-3">
        <div class="card shadow-sm border-0 border-start border-success border-4">
          <div class="card-body">
            <h6 class="text-muted mb-2">Completed Orders</h6>
            <h4 class="mb-1">
              <%= stats.completedOrders || 0 %>
            </h4>
            <small class="text-muted">Delivered successfully</small>
          </div>
        </div>
      </div>
    </div>

    <!-- Charts and Data Row -->
    <div class="row mb-4">
      <!-- Revenue Chart -->
      <div class="col-md-8 mb-3">
        <div class="card shadow-sm border-0">
          <div class="card-header bg-white">
            <h5 class="mb-0"><i class="fas fa-chart-area me-2"></i>Revenue Trend (Last 6 Months)</h5>
          </div>
          <div class="card-body">
            <canvas id="revenueChart" height="80"></canvas>
          </div>
        </div>
      </div>

      <!-- User Statistics -->
      <div class="col-md-4 mb-3">
        <div class="card shadow-sm border-0 h-100">
          <div class="card-header bg-white">
            <h5 class="mb-0"><i class="fas fa-users me-2"></i>User Statistics</h5>
          </div>
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
              <div>
                <i class="fas fa-user-circle text-primary me-2"></i>
                <span>Customers</span>
              </div>
              <h4 class="mb-0">
                <%= stats.totalCustomers || 0 %>
              </h4>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
              <div>
                <i class="fas fa-user-tie text-info me-2"></i>
                <span>Managers</span>
              </div>
              <h4 class="mb-0">
                <%= stats.totalManagers || 0 %>
              </h4>
            </div>
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <i class="fas fa-paint-brush text-success me-2"></i>
                <span>Designers</span>
              </div>
              <h4 class="mb-0">
                <%= stats.totalDesigners || 0 %>
              </h4>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Orders and Actions -->
    <div class="row mb-4">
      <!-- Recent Orders -->
      <div class="col-md-8 mb-3">
        <div class="card shadow-sm border-0">
          <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-clock me-2"></i>Recent Orders</h5>
            <a href="/admin/orders" class="btn btn-sm btn-outline-primary">View All</a>
          </div>
          <div class="card-body">
            <% if (recentOrders && recentOrders.length> 0) { %>
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Order ID</th>
                      <th>Customer</th>
                      <th>Items</th>
                      <th>Total</th>
                      <th>Status</th>
                      <th>Date</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% recentOrders.forEach(order=> { %>
                      <tr>
                        <td><small>
                            <%= order._id.toString().substring(0, 8) %>...
                          </small></td>
                        <td>
                          <%= order.customerId ? order.customerId.username : 'N/A' %>
                        </td>
                        <td>
                          <%= order.items ? order.items.length : 0 %>
                        </td>
                        <td><strong>₹<%= (order.totalPrice || 0).toFixed(2) %></strong></td>
                        <td>
                          <% if (order.status==='pending' ) { %>
                            <span class="badge bg-warning">Pending</span>
                            <% } else if (order.status==='in_production' ) { %>
                              <span class="badge bg-info">In Production</span>
                              <% } else if (order.status==='shipped' ) { %>
                                <span class="badge bg-primary">Shipped</span>
                                <% } else if (order.status==='completed' || order.status==='delivered' ) { %>
                                  <span class="badge bg-success">Completed</span>
                                  <% } else { %>
                                    <span class="badge bg-secondary">
                                      <%= order.status %>
                                    </span>
                                    <% } %>
                        </td>
                        <td><small>
                            <%= new Date(order.orderDate).toLocaleDateString() %>
                          </small></td>
                      </tr>
                      <% }) %>
                  </tbody>
                </table>
              </div>
              <% } else { %>
                <p class="text-muted text-center py-4">No orders yet</p>
                <% } %>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="col-md-4 mb-3">
        <div class="card shadow-sm border-0">
          <div class="card-header bg-white">
            <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
          </div>
          <div class="card-body">
            <div class="d-grid gap-2">
              <a href="/admin/products" class="btn btn-primary">
                <i class="fas fa-boxes me-2"></i>Manage Products
              </a>
              <a href="/admin/orders" class="btn btn-outline-primary">
                <i class="fas fa-shopping-bag me-2"></i>View All Orders
              </a>
              <a href="/feedback/all" class="btn btn-outline-info">
                <i class="fas fa-comments me-2"></i>Customer Feedback
              </a>
            </div>
          </div>
        </div>

        <!-- Top Products -->
        <div class="card shadow-sm border-0 mt-3">
          <div class="card-header bg-white">
            <h5 class="mb-0"><i class="fas fa-star me-2"></i>Top Products</h5>
          </div>
          <div class="card-body">
            <% if (products && products.length> 0) { %>
              <% products.slice(0, 5).forEach(product=> { %>
                <div class="d-flex justify-content-between align-items-center mb-2 pb-2 border-bottom">
                  <div>
                    <small class="text-muted">
                      <%= product.name %>
                    </small>
                  </div>
                  <div>
                    <span class="badge <%= product.inStock ? 'bg-success' : 'bg-danger' %>">
                      <%= product.inStock ? 'In Stock' : 'Out of Stock' %>
                    </span>
                  </div>
                </div>
                <% }) %>
                  <% } else { %>
                    <p class="text-muted mb-0">No products</p>
                    <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Chart.js Script -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
  <script>
    // Revenue Chart
    const ctx = document.getElementById('revenueChart').getContext('2d');
    const monthlyData = <% - JSON.stringify(monthlyData || []) %>;

    new Chart(ctx, {
      type: 'line',
      data: {
        labels: monthlyData.map(d => d.month),
        datasets: [{
          label: 'Revenue (₹)',
          data: monthlyData.map(d => d.revenue),
          borderColor: 'rgb(75, 192, 192)',
          backgroundColor: 'rgba(75, 192, 192, 0.1)',
          tension: 0.4,
          fill: true
        }, {
          label: 'Orders',
          data: monthlyData.map(d => d.orders),
          borderColor: 'rgb(255, 99, 132)',
          backgroundColor: 'rgba(255, 99, 132, 0.1)',
          tension: 0.4,
          fill: true,
          yAxisID: 'y1'
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: true,
        interaction: {
          mode: 'index',
          intersect: false,
        },
        scales: {
          y: {
            type: 'linear',
            display: true,
            position: 'left',
            title: {
              display: true,
              text: 'Revenue (₹)'
            }
          },
          y1: {
            type: 'linear',
            display: true,
            position: 'right',
            title: {
              display: true,
              text: 'Orders'
            },
            grid: {
              drawOnChartArea: false,
            },
          },
        },
        plugins: {
          legend: {
            display: true,
            position: 'top'
          }
        }
      }
    });
  </script>

  <%- include('../partials/footer') %>