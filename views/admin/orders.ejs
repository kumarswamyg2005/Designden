<%- include('../partials/header') %>

  <div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
      <div class="col-md-12">
        <div class="card shadow-sm border-0 bg-primary text-white">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h2 class="card-title mb-2">
                  <i class="fas fa-shopping-bag me-2"></i>All Orders
                </h2>
                <p class="card-text mb-0">View and manage all customer orders</p>
              </div>
              <a href="/admin/dashboard" class="btn btn-light">
                <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Orders Table -->
    <div class="row">
      <div class="col-md-12">
        <div class="card shadow-sm border-0">
          <div class="card-header bg-white">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Order List</h5>
          </div>
          <div class="card-body">
            <% if (orders && orders.length> 0) { %>
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Order ID</th>
                      <th>Customer</th>
                      <th>Email</th>
                      <th>Items</th>
                      <th>Total Amount</th>
                      <th>Status</th>
                      <th>Payment</th>
                      <th>Order Date</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% orders.forEach(order=> { %>
                      <tr>
                        <td>
                          <small class="font-monospace">
                            <%= order._id.toString().substring(0, 10) %>...
                          </small>
                        </td>
                        <td>
                          <%= order.customerId ? order.customerId.username : 'N/A' %>
                        </td>
                        <td>
                          <small>
                            <%= order.customerId ? order.customerId.email : 'N/A' %>
                          </small>
                        </td>
                        <td>
                          <span class="badge bg-secondary">
                            <%= order.items ? order.items.length : 0 %> items
                          </span>
                        </td>
                        <td>
                          <strong>₹<%= (order.totalPrice || 0).toFixed(2) %></strong>
                        </td>
                        <td>
                          <% if (order.status==='pending' ) { %>
                            <span class="badge bg-warning text-dark">Pending</span>
                            <% } else if (order.status==='in_production' ) { %>
                              <span class="badge bg-info">In Production</span>
                              <% } else if (order.status==='shipped' ) { %>
                                <span class="badge bg-primary">Shipped</span>
                                <% } else if (order.status==='completed' || order.status==='delivered' ) { %>
                                  <span class="badge bg-success">Completed</span>
                                  <% } else if (order.status==='cancelled' ) { %>
                                    <span class="badge bg-danger">Cancelled</span>
                                    <% } else { %>
                                      <span class="badge bg-secondary">
                                        <%= order.status %>
                                      </span>
                                      <% } %>
                        </td>
                        <td>
                          <% if (order.paymentStatus==='paid' ) { %>
                            <span class="badge bg-success">Paid</span>
                            <% } else { %>
                              <span class="badge bg-warning text-dark">Unpaid</span>
                              <% } %>
                        </td>
                        <td>
                          <small>
                            <%= new Date(order.orderDate).toLocaleDateString('en-US', { year: 'numeric' , month: 'short'
                              , day: 'numeric' }) %>
                          </small>
                        </td>
                        <td>
                          <a href="/admin/order/<%= order._id %>" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-eye"></i> View
                          </a>
                        </td>
                      </tr>
                      <% }) %>
                  </tbody>
                </table>
              </div>

              <!-- Order Summary Stats -->
              <div class="row mt-4">
                <div class="col-md-12">
                  <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Total Orders:</strong>
                    <%= orders.length %> |
                      <strong>Total Revenue:</strong> ₹<%= orders.reduce((sum, o)=> sum + (o.totalPrice || 0),
                        0).toFixed(2) %>
                  </div>
                </div>
              </div>

              <% } else { %>
                <div class="text-center py-5">
                  <i class="fas fa-shopping-bag text-muted" style="font-size: 4rem;"></i>
                  <p class="text-muted mt-3">No orders found</p>
                </div>
                <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>