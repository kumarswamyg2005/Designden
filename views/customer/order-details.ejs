<%- include('../partials/header') %>

  <div class="row mb-4">
    <div class="col-md-12">
      <div class="card shadow-sm">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <h2 class="card-title mb-0">Order Details</h2>
            <a href="/customer/dashboard" class="btn btn-outline-primary">Back to Dashboard</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header">
          <h3>Order #<%= order._id.toString().substring(0, 8).toUpperCase() %>
          </h3>
        </div>
        <div class="card-body">
          <!-- Order Information -->
          <div class="row mb-4">
            <div class="col-md-6">
              <h5>Order Information</h5>
              <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between">
                  <span>Order Date:</span>
                  <span>
                    <%= new Date(order.orderDate).toLocaleDateString() %>
                  </span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span>Status:</span>
                  <span class="badge <%= 
                  order.status === 'pending' ? 'bg-warning' : 
                  order.status === 'in_production' ? 'bg-primary' : 
                  order.status === 'completed' ? 'bg-success' : 
                  order.status === 'shipped' ? 'bg-info' :
                  order.status === 'delivered' ? 'bg-success' :
                  'bg-danger' 
                %>">
                    <%= order.status.replace('_', ' ' ).toUpperCase() %>
                  </span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span>Payment Status:</span>
                  <span class="badge <%= order.paymentStatus === 'paid' ? 'bg-success' : 'bg-warning' %>">
                    <%= order.paymentStatus.toUpperCase() %>
                  </span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span>Total Items:</span>
                  <span>
                    <%= order.items.length %>
                  </span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span>Total Price:</span>
                  <span class="fw-bold">₹<%= order.totalPrice.toFixed(2) %></span>
                </li>
              </ul>
            </div>
            <div class="col-md-6">
              <h5>Delivery Information</h5>
              <ul class="list-group list-group-flush">
                <li class="list-group-item">
                  <strong>Delivery Address:</strong>
                  <p class="mb-0 mt-2">
                    <%= order.deliveryAddress %>
                  </p>
                </li>
              </ul>
            </div>
          </div>

          <!-- Order Items -->
          <div class="mb-4">
            <h5>Order Items</h5>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Item</th>
                    <th>Details</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Subtotal</th>
                  </tr>
                </thead>
                <tbody>
                  <% order.items.forEach((item, index)=> { %>
                    <tr>
                      <td>
                        <div class="d-flex align-items-center">
                          <% // Priority: customImage (3D design)> productId.image (shop) > default
                            let itemImageUrl = '/images/casual-tshirt.jpeg';
                            let itemLabel = 'Item #' + (index + 1);

                            if (item.customizationId) {
                            // Custom 3D Design from Design Studio (has customImage, no productId)
                            if (item.customizationId.customImage && !item.customizationId.productId) {
                            itemImageUrl = item.customizationId.customImage;
                            itemLabel = '🎨 Custom 3D Design #' + (index + 1);
                            }
                            // Shop product with custom design
                            else if (item.customizationId.customImage && item.customizationId.productId) {
                            itemImageUrl = item.customizationId.customImage;
                            itemLabel = '🛍️ Customized Product #' + (index + 1);
                            }
                            // Shop product (no custom image)
                            else if (item.customizationId.productId && item.customizationId.productId.image) {
                            itemImageUrl = item.customizationId.productId.image;
                            itemLabel = '🛍️ ' + item.customizationId.productId.name;
                            }
                            }
                            %>
                            <img src="<%= itemImageUrl %>" alt="<%= itemLabel %>" class="me-3"
                              style="width: 80px; height: 80px; object-fit: cover; border-radius: 8px; border: 2px solid #dee2e6;">
                            <div>
                              <strong>
                                <%= itemLabel %>
                              </strong>
                              <% if (item.customizationId && !item.customizationId.productId) { %>
                                <br><small class="badge bg-primary">3D Design Studio</small>
                                <% } %>
                            </div>
                        </div>
                      </td>
                      <td>
                        <% if (item.customizationId) { %>
                          <% if (item.customizationId.customText) { %>
                            <small class="text-muted">
                              <%= item.customizationId.customText %>
                            </small><br>
                            <% } %>
                              <% if (item.customizationId.size) { %>
                                <small><strong>Size:</strong>
                                  <%= item.customizationId.size %>
                                </small><br>
                                <% } %>
                                  <% if (item.customizationId.color) { %>
                                    <small><strong>Color:</strong>
                                      <%= item.customizationId.color %>
                                    </small>
                                    <% } %>
                                      <% } else { %>
                                        <small class="text-muted">Custom item</small>
                                        <% } %>
                      </td>
                      <td>
                        <%= item.quantity %>
                      </td>
                      <td>₹<%= item.price.toFixed(2) %>
                      </td>
                      <td>₹<%= (item.price * item.quantity).toFixed(2) %>
                      </td>
                    </tr>
                    <% }) %>
                </tbody>
                <tfoot>
                  <tr>
                    <td colspan="4" class="text-end"><strong>Total:</strong></td>
                    <td><strong>₹<%= order.totalPrice.toFixed(2) %></strong></td>
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>

          <!-- Order Timeline -->
          <div class="mb-4">
            <h5>Order Timeline</h5>
            <div class="timeline">
              <div class="timeline-item <%= order.status ? 'active' : '' %>">
                <div class="timeline-badge bg-success"></div>
                <div class="timeline-content">
                  <h6>Order Placed</h6>
                  <p>
                    <%= new Date(order.orderDate).toLocaleString() %>
                  </p>
                </div>
              </div>

              <% if (order.productionStartedAt) { %>
                <div class="timeline-item active">
                  <div class="timeline-badge bg-primary"></div>
                  <div class="timeline-content">
                    <h6>Production Started</h6>
                    <p>
                      <%= new Date(order.productionStartedAt).toLocaleString() %>
                    </p>
                  </div>
                </div>
                <% } %>

                  <% if (order.productionCompletedAt) { %>
                    <div class="timeline-item active">
                      <div class="timeline-badge bg-success"></div>
                      <div class="timeline-content">
                        <h6>Production Completed</h6>
                        <p>
                          <%= new Date(order.productionCompletedAt).toLocaleString() %>
                        </p>
                      </div>
                    </div>
                    <% } %>

                      <% if (order.shippedAt) { %>
                        <div class="timeline-item active">
                          <div class="timeline-badge bg-info"></div>
                          <div class="timeline-content">
                            <h6>Shipped</h6>
                            <p>
                              <%= new Date(order.shippedAt).toLocaleString() %>
                            </p>
                          </div>
                        </div>
                        <% } %>

                          <% if (order.deliveredAt) { %>
                            <div class="timeline-item active">
                              <div class="timeline-badge bg-success"></div>
                              <div class="timeline-content">
                                <h6>Delivered</h6>
                                <p>
                                  <%= new Date(order.deliveredAt).toLocaleString() %>
                                </p>
                              </div>
                            </div>
                            <% } %>
            </div>
          </div>

          <% if (order.status==='delivered' || order.status==='completed' ) { %>
            <div class="d-grid">
              <a href="/feedback/submit/<%= order._id %>" class="btn btn-success">Leave Feedback</a>
            </div>
            <% } %>
        </div>
      </div>
    </div>

    <!-- Quick Summary Card -->
    <div class="col-md-4">
      <div class="card shadow-sm mb-3">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">Order Summary</h5>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <h6 class="text-muted">Order ID</h6>
            <p class="mb-0 font-monospace">
              <%= order._id %>
            </p>
          </div>
          <div class="mb-3">
            <h6 class="text-muted">Total Items</h6>
            <p class="mb-0">
              <%= order.items.length %> item(s)
            </p>
          </div>
          <div class="mb-3">
            <h6 class="text-muted">Total Amount</h6>
            <h4 class="mb-0 text-primary">₹<%= order.totalPrice.toFixed(2) %>
            </h4>
          </div>
          <div>
            <h6 class="text-muted">Current Status</h6>
            <span class="badge <%= 
            order.status === 'pending' ? 'bg-warning' : 
            order.status === 'in_production' ? 'bg-primary' : 
            order.status === 'completed' ? 'bg-success' : 
            order.status === 'shipped' ? 'bg-info' :
            order.status === 'delivered' ? 'bg-success' :
            'bg-danger' 
          %> fs-6">
              <%= order.status.replace('_', ' ' ).toUpperCase() %>
            </span>
          </div>
        </div>
      </div>

      <!-- Actions Card -->
      <div class="card shadow-sm">
        <div class="card-header">
          <h5 class="mb-0">Actions</h5>
        </div>
        <div class="card-body">
          <div class="d-grid gap-2">
            <% if (order.status==='pending' ) { %>
              <button class="btn btn-outline-danger btn-sm"
                onclick="if(confirm('Cancel this order?')) window.location.href='/customer/order/<%= order._id %>/cancel'">
                <i class="fas fa-times"></i> Cancel Order
              </button>
              <% } %>
                <a href="/customer/dashboard" class="btn btn-outline-secondary btn-sm">
                  <i class="fas fa-arrow-left"></i> Back to Orders
                </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <style>
    .timeline {
      position: relative;
      padding: 0;
      list-style: none;
    }

    .timeline-item {
      position: relative;
      padding-left: 40px;
      margin-bottom: 25px;
    }

    .timeline-item::before {
      content: '';
      position: absolute;
      left: 13px;
      top: 30px;
      bottom: -25px;
      width: 2px;
      background: #e0e0e0;
    }

    .timeline-item:last-child::before {
      display: none;
    }

    .timeline-badge {
      position: absolute;
      left: 0;
      top: 0;
      width: 28px;
      height: 28px;
      border-radius: 50%;
      border: 3px solid #fff;
      box-shadow: 0 0 0 2px #e0e0e0;
    }

    .timeline-item.active .timeline-badge {
      box-shadow: 0 0 0 2px currentColor;
    }

    .timeline-content h6 {
      margin: 0 0 5px 0;
      font-weight: 600;
    }

    .timeline-content p {
      margin: 0;
      color: #666;
      font-size: 0.9rem;
    }
  </style>

  <%- include('../partials/footer') %>