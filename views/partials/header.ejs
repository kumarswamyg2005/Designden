<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= typeof title !=='undefined' ? title + ' | DesignDen' : 'DesignDen' %>
  </title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/">
        <i class="fas fa-tshirt me-2"></i>DesignDen
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/shop">Shop</a>
          </li>

          <% if (user) { %>
            <% if (user.role==='customer' ) { %>
              <li class="nav-item"><a class="nav-link" href="/customer/design-studio">Design Studio</a></li>
              <li class="nav-item"><a class="nav-link" href="/customer/dashboard">Dashboard</a></li>
              <li class="nav-item"><a class="nav-link" href="/customer/cart"><i class="fas fa-shopping-cart"></i> Cart
                  <% if (typeof cartCount !=='undefined' && cartCount> 0) { %>
                    <span class="badge bg-danger">
                      <%= cartCount %>
                    </span>
                    <% } %>
                </a></li>
              <% } else if (user.role==='designer' ) { %>
                <li class="nav-item"><a class="nav-link" href="/designer/dashboard">Dashboard</a></li>
                <% } else if (user.role==='manager' ) { %>
                  <li class="nav-item"><a class="nav-link" href="/manager">Manager</a></li>
                  <% } else if (user.role==='admin' ) { %>
                    <li class="nav-item"><a class="nav-link" href="/admin/dashboard">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="/feedback/all">Feedbacks</a></li>
                    <% } %>
                      <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
                      <% } else { %>
                        <li class="nav-item"><a class="nav-link" href="/design-studio">Design Studio</a></li>
                        <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
                        <li class="nav-item"><a class="nav-link" href="/signup">Sign Up</a></li>
                        <% } %>
        </ul>
      </div>

      <!-- Theme toggle button (always visible at the end of the navbar) -->
      <div class="d-flex align-items-center ms-3">
        <button id="themeToggleBtn" class="btn btn-sm btn-outline-secondary" aria-label="Toggle theme">
          <i id="themeIcon" class="fas fa-sun"></i>
        </button>
      </div>

    </div>
  </nav>

  <%- include('flash-messages') %>